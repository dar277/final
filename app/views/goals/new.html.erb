<h1> Create new goal! </h1>

<div class="row">
<div class="col-md-5">

      <%= form_tag "/goals", "method" => "post"  %>

  <div class="form-group">
    <input name="user_id" value="<%= cookies["user_id"] %>" type="hidden" class="form-control input-md">
  </div>

        <div class="form-group">
          <%= label_tag "outcome", "What is your goal?" %>
          <%= text_field_tag "outcome", "", "class" => "form-control" %>
        </div>

        <%= submit_tag "Add This Goal", "class" => "btn btn-lg btn-success" %> or <%= link_to "Cancel", "/efforts" %>

      </form>
</div>
</div>
